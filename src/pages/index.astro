---
import { Image } from 'astro:assets'

import PageLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/home/Section.astro'
import Card from '@/components/Card.astro'
import ProjectCard from '@/components/home/ProjectCard.astro'
import Label from '@/components/home/Label.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import Hitokoto from '@/components/home/Hitokoto.astro'
import PostPreview from '@/components/blog/PostPreview.astro'
import Button from '@/components/Button.astro'
import { siteConfig } from '@/site-config'
import { getAllPosts, sortMDByDate } from '@/utils'
import GithubCard from '@/components/GithubCard.astro'

import avatar from '@/assets/avatar.png'

const language = ['C/C++', 'Python', 'C#', 'Rust']
const techstack = ['Git', 'Pytorch', 'OpenCV', 'Huggingface']
const research = ['3D Vision', 'AIGC', 'GameDev']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }} highlightColor='#659EB966'>
  <div class='flex w-full flex-col gap-y-10 md:w-4/5 lg:w-5/6'>
    <section class='animate flex flex-col items-center gap-y-7'>
      <Image
        src={avatar}
        alt='profile'
        class='h-28 w-auto rounded-full border p-1'
        loading='eager'
      />

      <div class='flex flex-col items-center gap-y-4'>
        <h1 class='text-3xl font-bold'>{siteConfig.author}</h1>
        <div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
          <Label title='Tianjin, China'>
            <svg class='size-5' slot='icon'>
              <use href='/icons/social.svg#mingcute-location-line'></use>
            </svg>
          </Label>
          <Label
            title='Github'
            as='a'
            href='https://github.com/Ethan2k04'
            target='_blank'
          >
            <svg class='size-5' slot='icon'>
              <use href='/icons/social.svg#mingcute-github-line'></use>
            </svg>
          </Label>
          <Label
            title='Email'
            as='a'
            href='mailto:yintengjiao2004@gmail.com'
            target='_blank'
          >
            <svg class='size-5' slot='icon'>
              <use href='/icons/social.svg#mingcute-mail-line'></use>
            </svg>
          </Label>
        </div>
      </div>
    </section>

    <Section title='About'>
      <p class='text-muted-foreground'>Senior Student / Research Intern</p>
      <p class='text-muted-foreground'>
        I'm currently a CS undergraduate student at <strong>Nankai University</strong>.
        I have a strong interest in <strong>3D Vision</strong>, <strong>AIGC</strong> and <strong>Game Development</strong>.
        My research goal is realizing geometry grouded world modeling and enabling machine intelligence in real 3D world.
        Feel free to contact me via Email.
      </p>
      <Button title='More about me' class='w-fit self-end' href='/about' style='ahead' />
    </Section>
    {
      allPostsByDate.length > 0 && (
        <Section title='Posts'>
          <ul class='flex flex-col gap-y-1.5 sm:gap-y-2'>
            {allPostsByDate.map((p) => (
              <li class='flex flex-col gap-x-2 sm:flex-row'>
                {/* @ts-ignore */}
                <PostPreview post={p} />
              </li>
            ))}
          </ul>
          <Button title='More posts' class='w-fit self-end' href='/blog' style='ahead' />
        </Section>
      )
    }

    <Section title='Education'>
