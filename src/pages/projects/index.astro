---
import Button from '@/components/Button.astro'
import Collapse from '@/components/Collapse.astro'
import Sponsors from '@/components/projects/Sponsors.astro'
import ProjectSection from '@/components/projects/ProjectSection.astro'
import PageLayout from '@/layouts/CommonPage.astro'
import { Image } from 'astro:assets'
import wechat from '@/assets/wechat-qrcode.png'
import alipay from '@/assets/alipay-qrcode.png'

const headings = [
  {
    depth: 2,
    slug: 'theme',
    text: 'Theme'
  },
  {
    depth: 2,
    slug: 'programs',
    text: 'Programs'
  },
  {
    depth: 2,
    slug: 'learnings',
    text: 'Learnings'
  },
  {
    depth: 2,
    slug: 'others',
    text: 'Others'
  },
  {
    depth: 2,
    slug: 'gpg-signature',
    text: 'GPG Signature'
  },
  {
    depth: 2,
    slug: 'sponsorship',
    text: 'Sponsorship'
  }
]
---

<PageLayout title='Projects' headings={headings} info={{ slug: '/projects', hideComment: true }}>
  <p>Github Activities:</p>
  <p>
    <Image
      src='https://ghchart.rshah.org/659eb9/ethan2k04'
      alt='github activities'
      inferSize
      loading='eager'
      decoding='async'
    />
  </p>
  <p>
    If you think it would be useful or interesting to collaborate on a project, you can donate to
    support my work or contact me to discuss a project.
  </p>
  <Button title='Checkout sponsorship' class='w-fit' href='#sponsorship'>
    <svg class='size-5' slot='before'>
      <use href='/icons/copyright-sponsor.svg#mingcute-receive-money-line'></use>
    </svg>
  </Button>

  <h2 id='theme'>Themes</h2>
  <ProjectSection
    project={[
      {
        name: 'ðŸ–¥ï¸ EthanSite',
        description: 'My simple and elegant personal site.',
        links: [
          { type: 'github', href: 'https://github.com/Ethan2k04/EthanSite' },
          { type: 'site', href: 'https://www.ethan2k04.icu/' }
        ]
      }
    ]}
  />

  <h2 id='programs'>Projects</h2>
  <ProjectSection
    project={[
      {
        name: 'ðŸŽ¾ TennisDetection',
        description: 'Tennis trajectory tracking based on YOLO11',
        links: [{ type: 'github', href: 'https://github.com/Ethan2k04/TennisDetection' }]
      },
      {
        name: 'âŒ¨ï¸ nku-compiler-2024-rs',
        description: 'A SYSY compiler written with Rust.',
        links: [
          { type: 'github', href: 'https://github.com/Ethan2k04/nku-compiler-2024-rs' },
          {
            type: 'doc',
            href: 'https://github.com/Ethan2k04/nku-compiler-2024-rs/blob/main/README.md'
          }
        ]
      }
    ]}
  />
  <Collapse title='Some old projects'>
    <ProjectSection
      project={[
        {
          name: 'ðŸ’» NKUStar_TestBench',
          description: 'A simple CPU performance testbench',
          links: [{ type: 'github', href: 'https://github.com/Ethan2k04/NKUStar_TestBench' }]
        },
        {
          name: 'ðŸ˜´ SleepFastApp',
          description: 'An android app that intergrate alarm clock with sleep monitoring.',
          links: [{ type: 'github', href: 'https://github.com/Ethan2k04/SleepFastApp' }]
        }
      ]}
    />
  </Collapse>

  <!-- gpg signature -->
  <h2 id='gpg-signature'>GPG Signature</h2>
  <p>
    You can verify the authenticity of the files I signed by checking the GPG signature. My GPG key
    is <code>XXXXXXXX</code>, and you can find it on the opengpg key servers or download from it.
  </p>
  <Button
    href='https://www.youtube.com/watch?v=dQw4w9WgXcQ'
    title='Checkout my key'
    target='_blank'
  >
    <svg class='size-5' slot='before'>
      <use href='/icons/project.svg#mingcute-key-2-line'></use>
    </svg>
  </Button>

  <!-- sponsorship -->
  <h2 id="sponsorship" class="flex items-center gap-2">
    Sponsorship
    <a
      href="https://buymeacoffee.com/ethan2k04"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center"
      aria-label="Buy me a coffee"
      title="Buy me a coffee"
    >
      <img
        src="https://cdn.buymeacoffee.com/buttons/bmc-new-btn-logo.svg"
        alt=""
        class="h-6 w-6 opacity-80 transition hover:opacity-100"
      />
    </a>
  </h2>
  <p>Please leave a message or contact me proactively after sponsorship.</p>
  <div class='flex flex-col justify-center gap-4 sm:flex-row'>
    {
      [
        { name: 'WeChat', icon: 'mingcute-wechat-pay-line', image: wechat },
        { name: 'Alipay', icon: 'mingcute-alipay-line', image: alipay }
      ].map((item) => (
        <div class='group relative justify-center overflow-hidden rounded-xl border bg-white'>
          <div class='absolute bottom-0 end-0 start-0 top-0 flex items-center justify-center transition-opacity group-hover:opacity-0'>
            <svg class='size-20'>
              <use href={`/icons/copyright-sponsor.svg#${item.icon}`} />
            </svg>
          </div>
          <Image
            class='mx-auto my-0 max-w-72 opacity-30 blur-sm transition-opacity group-hover:opacity-100 group-hover:blur-none'
            src={item.image}
            alt={item.name}
            loading='eager'
          />
        </div>
      ))
    }
  </div>
  <p>Thanks to the following sponsors:</p>
  <Sponsors sponsors={[{ name: 'NAME', amount: '$00.00', date: 'YYYY-MM-DD' }]} />
</PageLayout>

<script is:inline type='module' data-astro-rerun>
  import { pageviewCount } from 'https://unpkg.com/@waline/client@v3/dist/pageview.js'

  pageviewCount({
    serverURL: document.querySelector('meta[name="waline-server-url"]').getAttribute('content'),
    path: window.location.pathname
  })
</script>
